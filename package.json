{
  "name": "root",
  "private": true,
  "scripts": {
    "compile-libs": "lerna run compile --stream --scope @lib/*",
    "rm": "rm -rf */*/dist && rm -rf */*/node_modules && rm -rf node_modules",
    "deps": "npm run rm && npm i && npm run compile-libs",
    "prepare": "husky install",
    "migrate:all": "lerna run migrate:up --stream --scope @icommerce/*",
    "migrate:undo:all": "lerna run migrate:undo:all --stream --scope @icommerce/*",
    "seed:all": "lerna run seed:all --stream --scope @icommerce/*",
    "lint:all": "lerna run lint --stream --scope @icommerce/*",
    "test": "lerna run test --stream --scope '{@icommerce/customer-service,@icommerce/order-processor-service,@icommerce/warehouse-service}'",
    "package:outdated": "(npm outdated --json || true) | ./scripts/outdated-packages.js"
  },
  "workspaces": [
    "lib/*",
    "packages/*"
  ],
  "devDependencies": {
    "@babel/core": "7.19.3",
    "@babel/plugin-proposal-class-properties": "7.18.6",
    "@babel/plugin-transform-runtime": "7.18.10",
    "@babel/plugin-transform-typescript": "^7.18.8",
    "@babel/preset-env": "7.18.10",
    "@babel/preset-typescript": "7.17.12",
    "@faker-js/faker": "^7.3.0",
    "@lib/webpack": "*",
    "@types/amqplib": "^0.8.2",
    "@types/config": "^3.3.0",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/ramda": "^0.28.15",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^8.3.4",
    "babel-loader": "8.2.5",
    "core-js": "^3.23.4",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "^26.6.0",
    "eslint-plugin-jsdoc": "39.3.6",
    "eslint-plugin-prettier": "^4.0.0",
    "fishery": "^2.2.2",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "lerna": "^5.1.8",
    "lint-staged": "^13.0.3",
    "nx": "^14.4.2",
    "pretty-quick": "^3.1.3",
    "sequelize-cli": "^6.4.1",
    "supertest": "^6.2.4",
    "terser-webpack-plugin": "^5.3.3",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "webpack": "5.76.0",
    "webpack-cli": "4.10.0",
    "webpack-dev-server": "4.10.0",
    "webpack-node-externals": "3.0.0"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "pretty-quick --staged"
    ]
  },
  "dependencies": {
    "amqplib": "^0.10.0",
    "cloudevents": "^6.0.2",
    "config": "^3.3.7",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-rate-limit": "^6.4.0",
    "got": "^11.8.5",
    "ioredis": "^5.2.1",
    "lodash": "^4.17.21",
    "mongodb": "^4.7.0",
    "pg": "^8.7.3",
    "pg-hstore": "^2.3.4",
    "ramda": "^0.28.0",
    "rate-limit-redis": "^3.0.1",
    "sequelize": "^6.21.2",
    "uuid": "^8.3.2",
    "yup": "^0.32.11"
  }
}
